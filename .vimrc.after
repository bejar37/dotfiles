"if $COLORTERM == 'gnome-terminal'
  "set t_Co=256
"endif

if $TERM =~ '^screen-256color'
  nmap <Esc>OH <Home>
  imap <Esc>OH <Home>
  nmap <Esc>OF <End>
  imap <Esc>OF <End>
endif

let g:solarized_termcolors=256
set t_Co=16
set background=dark
colorscheme solarized

"set rnu
"setglobal rnu
set textwidth=80
autocmd BufEnter * set relativenumber
